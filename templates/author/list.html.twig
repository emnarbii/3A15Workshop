{% if authors is defined and authors is not empty %}

	<table border="1">
		<tr>
			<th>id</th>
			<th>pictures</th>
			<th>username</th>
			<th>email</th>
			<th>nb_books</th>
		</tr>
		{% set l = 0 %}
		{% for author in authors %}
			<tr>
				<td>{{author.id}}</td>
				<td><img src="{{author.picture}}" alt="image nn dispo" height="150px" width="150px"></td>
				<td>{{author.username}}</td>
				<td>{{author.email}}</td>
				<td>{{author.nb_books}}</td>
				{% set l= l+ author.nb_books %}
			</tr>
		{% endfor %}
		<h2>
			le tableau comporte
			{{authors| length}}
			auteurs avec
			{{l}}
			livres

		</h2>
	</table>
{% endif %}
